<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg">

    <ImageView
        android:id="@+id/imgFotoUser"
        android:layout_width="114dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textNamaUser"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgFotoUser"
        android:layout_marginEnd="27dp"
        android:text="Nama user"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textEmailUser"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textNamaUser"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:text="Email"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textNamaUser"
        android:layout_marginTop="87dp"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textDaftarResep"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:layout_toEndOf="@+id/imgFotoUser"
        android:fontFamily="cursive"
        android:text="Daftar Resep"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>